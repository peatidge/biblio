@model Tela.Areas.Administration.Models.Reference.Create
@{
    //TODO:b 350. Add Administration Views Reference Create.cshtml
    ViewData["Title"] = "Register Book Reference: Plant a Seed, Paint a Picture, Sing a Song, Share a dream, Climb that mountain whatever I.T. bee for thee";
}
<form action="Create" method="post">
    <div asp-validation-summary="All" role="alert"></div>
    <div class="form-floating">
        <input asp-for="Title" class="form-control" placeholder="e.g. Predictions for the present history of before the after" />
        <label asp-for="Title"></label>
    </div>
    <div class="form-floating">
        <input asp-for="ISBN" class="form-control" placeholder="e.g. @Q.Int(100,1000)-@Q.Int(1000000000,2147483647)" />
        <label asp-for="ISBN"></label>
    </div>
    <div class="form-floating">
        <input asp-for="Author" class="form-control" placeholder="e.g Artalius Wroteabook" />
        <label asp-for="Author"></label>
    </div>
    <div class="d-flex gap-1 align-items-center">
        <label asp-for="Books"></label>
        <input asp-for="Books" class="form-control" />
    </div>
    <button type="submit" class="btn-submit mt-3" id="apply-knowledge" title="@ViewData["Title"]"> &#129504; Apply Knowledge &#8512;</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

