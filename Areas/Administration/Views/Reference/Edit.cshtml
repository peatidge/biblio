@model Tela.Areas.Administration.Models.Reference.Edit
@{
    //TODO:b 362. Add Edit.cshtml to Administration Views Reference
    ViewData["Title"] = "Mutate Reference:";
}
<h1 class="alert alert-warning">Reference: @Model.ISBN</h1>
<form asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="form-floating">        
        <input asp-for="Title" class="form-control" /> 
        <label asp-for="Title"></label>
    </div>
    <div class="form-floating">     
        <input asp-for="Author" class="form-control" />
        <label asp-for="Author"></label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn-submit mt-3" title="Update Reference: @Q.T">&#129516 Mutate Blueprint</button>
    </div>
    <hr class="border border-primary-subtle" />
    <p class="text-sm-center war-p">* May have cosmic side-effects</p>
    <hr class="border border-primary-subtle" />
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="ISBN" />
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}