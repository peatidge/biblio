@page
@model LoginModel
@{
    //TODO:b 281. Update markup in Login.cshtml
    //TODO:b 282. Add addition form and validation styles in Grunt/Sass/site.scss (see file for updates)
    ViewData["Title"] = Html.Raw("&#10773; Enter:");
}
<form id="account" method="post">
    <div asp-validation-summary="All" role="alert"></div>
    <div class="form-floating">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Input.Email"></label>
    </div>
    <div class="form-floating">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Input.Password"></label>
    </div>
    <div class="form-group">
        <button id="login-submit" type="submit" class="btn-submit">&#10773; Enter</button>
    </div>
    <div class="d-flex flex-column flex-1 text-center gap-3 my-5">
        <label asp-for="Input.RememberMe">
            <i class="war-p me-1">RE:MEMBER:ME?</i>
            <input class="form-check-input " asp-for="Input.RememberMe" />
        </label>
        <a id="forgot-password" asp-page="./ForgotPassword"
           class="text-decoration-none"
           title="Forgotten to remember your entry ticket? Worry not &#128522, click here to reset your password">
            OBLITUS ES TESSERAE?
        </a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}